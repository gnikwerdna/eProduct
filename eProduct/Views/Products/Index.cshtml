@model IEnumerable<eP.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Listing</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <table>
        <tr><th> Item Name:</th><th> Product Group:</th><th>Pronto Part No</th></tr>
        <tr>
            <td>
                @Html.TextBox("SearchString")
            </td>
            <td>
                @Html.TextBox("SearchProductGroup")
            </td>
            <td>
                @Html.TextBox("SearchProntoPartNum")
            </td>
        </tr>
    </table>
    <input type="submit" value="filter" />
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.ActionLink("Compliance Wizard", "Compliance", new { id = item.ProductID }) |  @Html.DisplayFor(modelItem => item.ProductName)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProductID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProductID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProductID })
        </td>
    </tr>
}

</table>
